<h1 class="text-center"><%= @cocktail.name.capitalize %> </h1>

<ul>
  <% @doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "delete this dose", dose_path(dose.id), method: :delete, class: "btn btn-danger", style: "margin: 5px" %>
  </li>
  <% end %>
</ul>


<h3>Add an ingredient to your cocktail</h3>

<div class="container">
  <div class="row">
    <%= simple_form_for ([@cocktail, @dose]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="col-xs-12 col-md-6">
        <%= f.input :description %>
      </div>
      <div class="col-xs-12 col-md-6">
        <%= f.input :ingredient_id, collection: @ingredients %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
    <% end %>
  </div>
</div>

<row>
  <div class="col-xs-12 col-md-6">
    <%= link_to 'Back', cocktails_path, class: "btn btn-primary", style: "margin: 5px" %>
  </div>
</row>
